                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".src.StartActivity">


        </activity>
        <activity android:name=".src.login.LoginLocationActivity">

        </activity>
        <activity android:name=".src.login.LoginMainActivity">

        </activity>

        <activity android:name=".src.config.src.users.signup.SignUpProfileActivity">

        </activity>

        <activity android:name=".src.config.src.users.signup.SignUpMainActivity">


        </activity>

        <activity android:name=".src.splash.SplashActivity">

        </activity>
    </application>

</manifest>
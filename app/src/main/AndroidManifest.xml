        android:supportsRtl="true"
        android:theme="@style/Theme.CarrotMarket"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".src.config.src.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CarrotMarket.NoActionBar">

        </activity>

        <activity android:name=".src.splash.SplashActivity">

        </activity>

        <activity android:name=".src.config.src.main.btm.home.product.writing.ProductWritingActivity">

        </activity>

        <activity android:name=".src.StartActivity">


        </activity>
        <activity android:name=".src.login.LoginLocationActivity">

        </activity>
        <activity android:name=".src.login.LoginMainActivity">

        </activity>

        <activity android:name=".src.users.SignUpProfileActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".src.users.SignUpMainActivity">

        </activity>

        <activity android:name=".src.config.src.main.btm.home.product.search.ProductSearchActivity">



        </activity>

        <activity android:name="com.example.carrotmarket.src.config.src.main.btm.home.product.detail.ProductDetailActivity">


        </activity>

        <activity android:name="com.example.carrotmarket.src.config.src.main.btm.home.product.sale.ProductSaleListActivity">

        </activity>


        <activity android:name="com.example.carrotmarket.src.config.src.main.btm.home.HomeCategoryActivity">


        </activity>

        <activity android:name=".src.config.src.main.btm.home.product.writing.ProductWritingActivity"
            tools:ignore="DuplicateActivity"></activity>

        <activity android:name=".src.config.src.users.UsersSettingActivity">


        </activity>
    </application>

</manifest>